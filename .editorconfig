root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 160
trim_trailing_whitespace = true
no-wildcard-import=enabled

[*.{kt, kts}]
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{yml,yaml,json}]
indent_size = 2
